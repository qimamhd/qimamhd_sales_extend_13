<?xml version="1.0" encoding="UTF-8"?>
<odoo>
      <record id="sales_man_branch_view" model="ir.ui.view">
            <field name="name">branch.sales.man</field>
            <field name="model">custom.sales.mans</field>
            <field name="inherit_id" ref="qimamhd_sales_forms.custom_saleMan_view" />
            <field name="arch" type="xml">
               <field name="sale_man_type" position="after">
                   <field name="branch_id"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                </field>
            </field>
    </record>
     <record id="sales_man_branch_tree_view" model="ir.ui.view">
            <field name="name">branch.sales.man.tree</field>
            <field name="model">custom.sales.mans</field>
            <field name="inherit_id" ref="qimamhd_sales_forms.custom_sale_man_tree_view" />
            <field name="arch" type="xml">
               <field name="sale_man_type" position="after">
                    <field name="branch_id"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create': True}"/>
                </field>
            </field>
    </record>
</odoo>